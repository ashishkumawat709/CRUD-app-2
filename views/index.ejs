<%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add A Student</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age">
                    </div>
                    <div class="mb-3">
                        <label for="course" class="form-label">Course</label>
                        <input type="text" class="form-control" id="course" name="course">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center">List of Students</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Course</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i=1 %>
                            <% data.forEach((element)=>{ %>
                                <tr>
                                    <td>
                                        <%= i++ %>
                                    </td>
                                    <td>
                                        <%= element.name%>
                                    </td>
                                    <td>
                                        <%= element.age%>
                                    </td>
                                    <td>
                                        <%= element.course%>
                                    </td>
                                    <td>
                                        <form action="/edit/<%= element._id%>" method="get" class="d-inline">
                                            <button type="submit" class="btn"><i
                                                    class="fas fa-pen-square text-info"></i></button>
                                        </form>
                                        <form action="/delete/<%= element._id%>" method="post" class="d-inline">
                                            <button type="submit" class="btn"><i
                                                    class="fas fa-trash text-danger"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>